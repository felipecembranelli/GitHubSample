<div ng-controller="ListReposFavoritesCtrl"> 
    <div id="page-wrapper">

        <!-- page header -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Favorites Repositories</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row" >
                <div class="col-lg-3 col-md-3" ng-repeat="r in repos | filter:search">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <img class="img-gitlogo-ss" src="~/Content/Image/githublogo.png" />
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">{{r.name}}</div>
                                    <div>{{r.description}}</div>
                                </div>
                            </div>
                        </div>

                        <a href="javascript:void(0)">
                            <div class="panel-footer" ng-click="viewRepoDetail(r.id)">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right" tooltip="View detail"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
        </div>
    </div>
</div>
