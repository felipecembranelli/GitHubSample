}
                        <li>
                            <a href="/Home/index"><i class="fa fa-user fa-fw"></i> My Repositories</a>
                        </li>
                        <li>
                            <a href="/Home/ListFavoritiesRepos"><i class="fa fa-angle-right  fa-fw"></i> Favorites</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        
        <!-- /#page-wrapper -->
    </div>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
